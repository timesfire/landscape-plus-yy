#footer
  background: color-footer-background
  padding: 50px 0
  border-top: 1px solid color-border
  color: color-grey
  a
    color: #a3a3a3
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em

#social-font
  float: right
  display: block
  width: 45%
  a
    float: right
    display: block
    width: 14%
    color: color-white
    &:hover
      text-decoration: none
    font-size: font-size+20
    padding: 0.3em
    @media tablet
      padding 0.3em
    &:hover:before
      color #4876FF
    &[title="weibo"]::before,&[title="twitter"]::before,&[title="github"]::before,&[title="facebook"]::before,&[title="linkedin"]::before
      font-family FontAwesome
      font-smoothing()
    &[title="weibo"]::before
      content "\f18a"
    &[title="twitter"]::before
      content "\f099"
    &[title="github"]::before
      content "\f09b"
    &[title="facebook"]::before
      content "\f09a"
    &[title="linkedin"]::before
      content "\f08c"
    


